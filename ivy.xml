<ivy-module version="1.0">
    <info organisation="uk.ac.ox.well" module="indiana"/>

    <configurations defaultconfmapping="test->default">
        <conf name="default" description="the core dependencies for INDIANA"/>
    </configurations>

    <dependencies defaultconf="default">
        <!-- Logging dependency -->
        <dependency org="ch.qos.logback" name="logback-classic" rev="1.0.6" />

        <!-- Performance checking -->
        <dependency org="org.perf4j" name="perf4j" rev="0.9.16" />

        <!-- Reflections dependency -->
        <dependency org="org.reflections" name="reflections" rev="0.9.8" />

        <!-- Apache commons CLI: command line argument parser -->
        <dependency org="commons-cli" name="commons-cli" rev="1.2" />

        <!-- Apache commons JEXL: Java expression language -->
        <dependency org="org.apache.commons" name="commons-jexl" rev="2.1.1" />

        <!-- JGraphT -->
        <dependency org="org.jgrapht" name="jgrapht-jdk1.5" rev="0.7.3" />

        <!-- Stuff for making interactive maps -->
        <dependency org="org.xerial" name="sqlite-jdbc" rev="3.6.16" />

        <!-- TestNG -->
        <dependency org="org.testng" name="testng" rev="6.8" />

        <!-- Processing (local repo) -->
        <dependency org="org.processing" name="core" rev="2.0b3" />

        <!-- SAM-JDK (local repo) -->
        <dependency org="net.sf.picard" name="sam" rev="latest" />

        <!-- Picard (local repo) -->
        <dependency org="net.sf.picard" name="picard" rev="latest" />

        <!-- JAHMM (local repo) -->
        <dependency org="be.ac.ulg.montefiore.run.jahmm" name="jahmm" rev="0.6.1" />

        <!-- Modest Maps (local repo) -->
        <dependency org="com.modestmaps" name="modestmaps" rev="latest" />

        <!-- Unfolding - a library to create interactive maps and geovisualizations in Processing and Java -->
