        <dependency org="de.fhpotsdam.unfolding" name="sqlitejdbc" rev="v056" />
        <dependency org="de.fhpotsdam.unfolding" name="log4j" rev="1.2.15" />
        <dependency org="de.fhpotsdam.unfolding" name="libTUIO" rev="unknown" />
        <dependency org="de.fhpotsdam.unfolding" name="json4processing" rev="unknown" />
        <dependency org="de.fhpotsdam.unfolding" name="glgraphics" rev="unknown" />
        <dependency org="de.fhpotsdam.unfolding" name="opengl" rev="unknown" />
        <dependency org="de.fhpotsdam.unfolding" name="gluegen-rt" rev="unknown" />
